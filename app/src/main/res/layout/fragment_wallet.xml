<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.WalletFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/wallet_sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_coins"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_coin_new" />

                <TextView
                    android:id="@+id/tv_coins_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/coins_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="38sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_coins_in_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coins"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:paddingBottom="4dp"
                android:text="@string/coins_in_wallet"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wallet_update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_coins_in_wallet"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:paddingBottom="22dp"
                android:text="@string/wallet_update_info"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />

